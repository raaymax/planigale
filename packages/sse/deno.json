{
  "name": "@codecat/sse",
  "version": "0.0.1",
  "exports": "./mod.ts",
  "imports": {
    "@std/streams": "jsr:@std/streams@^0.224.5",
    "@std/http": "jsr:@std/http@^0.224.5"
  },
  "tasks": {
    "check": "deno lint && deno fmt --check && deno test -A && deno publish --dry-run --allow-dirty"
  },
  "lint": {
    "include": [
      "**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "no-slow-types"
      ],
      "exclude": [
        "require-await"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "."
    ]
  },
  "publish": {
    "include": [
      "mod.ts",
      "sink.ts",
      "source.ts",
      "src",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }
}
