{
  "name": "@codecat/planigale",
  "version": "0.2.2",
  "exports": "./mod.ts",
	"workspaces": [
		"packages/sse-source",
	],

  "imports": {
		"@codecat/sse-source": "./packages/sse-source/mod.ts",
    "@deno/cache-dir": "jsr:@deno/cache-dir@^0.8.0",
    "@deno/dnt": "../../ThirdParty/dnt/mod.ts",
    "@std/assert": "jsr:@std/assert@^0.218.2",
    "@std/fmt": "jsr:@std/fmt@^0.218.2",
    "@std/fs": "jsr:@std/fs@^0.218.2",
    "@std/http": "jsr:@std/http@^0.224.5",
    "@std/path": "jsr:@std/path@^0.218.2",
    "@std/streams": "jsr:@std/streams@^0.224.5",
    "@ts-morph/bootstrap": "npm:@ts-morph/bootstrap@0.22",
    "ajv": "npm:ajv@^8.16.0",
    "code-block-writer": "npm:code-block-writer@^13.0.1",
    "json-schema": "npm:@types/json-schema@^7.0.15",
    "qs": "npm:qs@^6.12.2"
  },
  "tasks": {
    "version": "deno run -A scripts/version.ts",
    "build": "deno run -A scripts/build_npm.ts",
    "publish": "deno publish && cd npm && npm publish",
    "test": "deno test -A && deno task build"
  },
  "test": {
    "exclude": [
      "npm/"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [],
      "exclude": [
        "require-await"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ]
  },
  "publish": {
    "include": [
      "mod.ts",
      "src",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }
}
